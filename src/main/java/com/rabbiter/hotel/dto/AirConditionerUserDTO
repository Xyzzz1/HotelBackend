package com.rabbiter.hotel.dto;

/**
 * @author Ruiqi Yu
 * @date: 2024/5/2
 * Description:
 * 等待队列中空调的基本属性
 */
public class AirConditionerUserDTO {

    private int roomID;
    private int windSpeed;
    private int temp;
    private int minutes=-1; //设定的空调使用时长,以秒为单位

    public AirConditionerUserDTO() {

    }

    public AirConditionerUserDTO(int roomID, int windSpeed, int temp, int minutes) {
        this.roomID = roomID;
        this.windSpeed = windSpeed;
        this.temp = temp;
        this.minutes = minutes;
    }

    public void setRoomID(int roomID) {
        this.roomID = roomID;
    }

    public int getRoomID() {
        return this.roomID;
    }

    public void setWindSpeed(int windSpeed) {
        this.windSpeed = windSpeed;
    }

    public int getWindSpeed() {
        return this.windSpeed;
    }

    public void setTemp(int temp) {
        this.temp = temp;
    }

    public int getTemp() {
        return this.temp;
    }

    public int getMinutes() {
        return minutes;
    }

    public void setMinutes(int minutes) {
        this.minutes = minutes;
    }

    @Override
    public String toString() {
        return "AirConditionerDTO{" +
                "roomID=" + roomID +
                ", windSpeed=" + windSpeed +
                ", temp=" + temp +
                ", minutes=" + minutes +
                '}';
    }
}
